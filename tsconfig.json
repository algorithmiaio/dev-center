{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue"
  ],
  "files" : [
    "./src/typings/vue-shims.d.ts",
    "./src/typings/contentful/index.d.ts",
    "./src/typings/highlightjs.d.ts",
    "./src/typings/uiv.d.ts",
    "./src/typings/moxios.d.ts",
    "./src/typings/vue-meta.d.ts",
    "./src/typings/vue-clipboards.d.ts",
    "./src/typings/webpack.d.ts"
  ]
}
